---
export interface Props {
  title: string;
  class?: string;
  fullWidth?: boolean;
  canonical?: string;
}

import BaseLayout from "./Layout.astro";
const { title, class: className, fullWidth = false, canonical } = Astro.props;
---

<BaseLayout title={title} canonical={canonical}>
  <main class:list={["container", className, fullWidth && "is-fullwidth"]}>
    <h2>{title}</h2>
    <slot />
  </main>
</BaseLayout>

<style lang="scss">
  @import "@styles/_variables.sass";

  main {
    margin-bottom: 4.5em;
  }

  h2 {
    text-align: center;

    @include mobile {
      margin-top: 0;
    }
  }
</style>
